<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/streepke_item_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:elevation="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/streepke_card"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/roundedImageView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_txt_naam"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txt_row_naam"
            android:layout_width="204dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android.support:text="@tools:sample/first_names" />

        <TextView
            android:id="@+id/txt_row_count"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="275dp"
            android:layout_marginEnd="100dp"
            android:text="0"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/iv_row_add"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="330dp"
            android:layout_marginEnd="10dp"
            ndroid:srcCompat="@drawable/addstreepke" />

        <ImageView
            android:id="@+id/iv_row_del"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="220dp"
            android:scaleType="fitXY"
            ndroid:srcCompat="@drawable/delstreepke" />

    </androidx.cardview.widget.CardView>

</LinearLayout>

