<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/streepke_item_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/streepke_card"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="25dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_row_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_txt_naam"
            >


            <ImageView
                android:id="@+id/roundedImageView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:clickable="false"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txt_row_naam"
                android:layout_width="204dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                android.support:text="@tools:sample/first_names"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/roundedImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_row_count"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_row_del"
                app:layout_constraintTop_toTopOf="parent" />
            <!--                android:text="0"-->

            <!--                ndroid:srcCompat="@drawable/addstreepke"-->

            <ImageView
                android:id="@+id/iv_row_add"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/roundedImageView"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/txt_row_count"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_row_del"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_row_naam"
                app:layout_constraintTop_toTopOf="parent" />
            <!--                ndroid:srcCompat="@drawable/addstreepke"-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

