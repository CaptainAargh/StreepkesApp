<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="10dp"
    android:orientation="vertical"
    android:id="@+id/streepke_item_row"
    android:clickable="true"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/streepke_card"


        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/roundedImageView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:background="@drawable/rounded_txt_naam"
            />

        <TextView
            android:id="@+id/txt_row_naam"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android.support:text="@tools:sample/first_names" />

        <TextView
            android:id="@+id/txt_row_count"
            android:layout_width="293dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="30sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_row_add"
            android:layout_width="641dp"
            android:layout_height="match_parent"
            ndroid:srcCompat="@drawable/addstreepke"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/iv_row_del"
            android:layout_width="465dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            ndroid:srcCompat="@drawable/delstreepke" />

    </androidx.cardview.widget.CardView>

</LinearLayout>

