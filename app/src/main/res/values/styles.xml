<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="CustomChipChoice">@style/CustomChipChoiceStyle</item>
        <item name="android:colorBackground">@color/reactiefGreyDark</item>

        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Action</item>
        <item name="colorPrimary">@color/reactiefGreenLight</item>
        <item name="colorPrimaryDark">@color/reactiefBlack</item>
        <item name="colorAccent">@color/reactiefGreyDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SlideActivityTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomChipChoiceStyle" parent="@style/Widget.MaterialComponents.Chip.Action">
            <item name="android:textSize">40sp</item>
            <item name="android:fontFamily">monospace</item>
            <item name="android:textStyle">italic|bold</item>
        <item name="android:clickable">true</item>
        <item name="chipBackgroundColor">@color/green</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="chipMinHeight">30dp</item>
        <item name="chipStartPadding">20dp</item>
        <item name="chipEndPadding">20dp</item>
        <item name="chipSpacingVertical">20dp</item>
        <item  name="android:paddingLeft">40dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginRight">80dp</item>


    </style>
    <style name="PopUpConfirmConsumpties" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/reactiefBlack</item>
        <item name="colorPrimary">@color/reactiefGreenLight</item>
        <item name="colorPrimaryDark">@color/reactiefBlack</item>
        <item name="colorAccent">@color/reactiefGreyDark</item>
        <item name="android:textColor">@color/reactiefGreenLight</item>
        <item name="android:textColorPrimary">#ffff</item>
    </style>
</resources>
